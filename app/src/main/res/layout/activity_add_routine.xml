<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wave"
    tools:context=".AddRoutineActivity">


    <ImageView
        android:id="@+id/img_back_to_my_routine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:onClick="backToMyRoutine"
        app:srcCompat="@mipmap/ic_back"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="368dp"
        android:layout_marginTop="200dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/routine_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_edittext"
            android:ems="10"
            android:hint="@string/et_add_routine_name"
            android:inputType="textPersonName"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:minHeight="48dp"
            android:importantForAutofill="no"
            tools:ignore="SpeakableTextPresentCheck|TextContrastCheck"/>

        <EditText
            android:id="@+id/day_to_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_edittext"
            android:ems="10"
            android:hint="@string/et_add_routine_date"
            android:inputType="date"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:minHeight="48dp"
            android:importantForAutofill="no"
            tools:ignore="SpeakableTextPresentCheck|TextContrastCheck" />

        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_edittext"
            android:ems="10"
            android:hint="@string/et_add_routine_description"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:inputType="textMultiLine"
            android:importantForAutofill="no"
            tools:ignore="SpeakableTextPresentCheck|TextContrastCheck"
            />

        <Spinner
            android:id="@+id/spinner_status"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/background_edittext"
            android:prompt="@string/et_add_routine_status"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:spinnerMode="dropdown"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/add_routine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/round_border"
            android:text="@string/btn_add_routine" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_add_routine_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="20dp"
        android:text="@string/tv_add_routine_title"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="italic" />

</RelativeLayout>